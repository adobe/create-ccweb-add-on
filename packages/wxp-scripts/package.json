        "scripts",
        "ci cd"
    ],
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "ccweb-add-on-scripts": "./bin/run.js"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "oclif": {
        "bin": "ccweb-add-on-scripts",
        "commands": "./dist/commands",
        "topicSeparator": " "
