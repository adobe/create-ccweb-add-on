{
    "name": "@adobe/create-ccweb-add-on",
    "version": "3.2.0",
    "author": "Adobe",
    "license": "MIT",
    "description": "Create an Adobe Creative Cloud Web Add-on.",
    "keywords": [
        "adobe",
        "creative cloud web",
        "express",
        "create",
        "add-on",
        "templates"
    ],
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "create-ccweb-add-on": "./bin/run.js"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "oclif": {
        "bin": "create-ccweb-add-on",
        "commands": {
            "strategy": "single",
            "target": "./dist/commands/create.js"
        },
        "topicSeparator": " "
    },
    "repository": {
        "url": "https://github.com/adobe/create-ccweb-add-on"
    },
    "scripts": {
        "clean": "rimraf dist coverage",
        "_postbuild": "cp -R templates/ dist/templates",
        "ibuild": "tsc",
        "build": "rushx clean && rushx ibuild && rushx _postbuild",
        "build:release": "rushx build",
        "test": "c8 mocha && c8 check-coverage"
    },
    "dependencies": {
        "@adobe/ccweb-add-on-analytics": "workspace:*",
        "@adobe/ccweb-add-on-core": "workspace:*",
        "@adobe/ccweb-add-on-manifest": "workspace:*",
        "@adobe/ccweb-add-on-scaffolder": "workspace:*",
        "@oclif/core": "4.2.8",
        "@swc/helpers": "0.5.17",
        "chalk": "4.1.1",
        "fs-extra": "10.0.1",
        "inversify": "6.0.1",
        "os-name": "4.0.1",
        "prompts": "2.4.2",
        "reflect-metadata": "0.1.13",
        "semver": "7.7.1",
        "string-template": "1.0.0",
        "tslib": "2.7.0",
        "validate-npm-package-name": "3.0.0"
    },
    "devDependencies": {
        "@oclif/test": "4.1.12",
        "@types/chai-as-promised": "7.1.3",
        "@types/chai": "4.2.14",
        "@types/fs-extra": "9.0.13",
        "@types/mocha": "9.1.1",
        "@types/node": "18.18.2",
        "@types/prompts": "2.0.14",
        "@types/semver": "7.5.8",
        "@types/sinon": "9.0.8",
        "@types/string-template": "1.0.2",
        "@types/validate-npm-package-name": "3.0.3",
        "c8": "10.1.3",
        "chai-as-promised": "7.1.1",
        "chai": "4.3.4",
        "mocha": "10.0.0",
        "oclif": "4.17.34",
        "prettier": "2.8.0",
        "regenerator-runtime": "0.13.9",
        "rimraf": "3.0.2",
        "sinon": "9.2.1",
        "ts-node": "10.9.2",
        "ts-sinon": "2.0.1",
        "typescript": "5.7.3"
    }
}
